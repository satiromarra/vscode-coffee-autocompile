{
  "name": "vscode-coffee-autocompile",
  "displayName": "Coffee Autocompile",
  "description": "Auto-compiles CoffeeScript files on save",
  "version": "0.0.4",
  "publisher": "satiromarra",
  "engines": {
    "vscode": "^1.54.0"
  },
  "tags": [
    "coffeescript",
    "javascript",
    "coffee",
    "js"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "properties": {
        "coffeescript.autocompile": {
          "type": "object",
          "scope": "resource",
          "properties": {
            "bare": {
              "description": "(true) if output without the top-level function safety wrapper.",
              "type": "boolean",
              "default": false
            },
            "output": {
              "description": "Output directory",
              "type": "string",
              "default": ""
            },
            "header": {
              "description": "(true) if output the 'Generated by CoffeeScript' header.",
              "type": "boolean",
              "default": false
            },
            "inlineMap": {
              "description": "(true) if output the source map as a base64-encoded string in a comment at the bottom.",
              "type": "boolean",
              "default": false
            },
            "options": {
              "description": "Additional options for the compiler.",
              "type": "object"
            },
            "sourceMap": {
              "description": "(true) to generate a source map.",
              "type": "boolean",
              "default": true
            },
            "compress": {
              "description": "(true) to compress.",
              "type": "boolean",
              "default": false
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/uglify-es": "^3.0.0",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "coffeescript": "^2.5.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "coffeescript": "^2.5.1",
    "fs-extra": "^9.1.0",
    "lodash": "^4.17.21",
    "uglify-es": "^3.3.9"
  },
  "icon": "icon.png",
  "badges": [
    {
      "description": "PayPal Donate",
      "url": "https://img.shields.io/badge/Donate-PayPal-green.svg",
      "href": "https://paypal.me/satiromarra"
    }
  ],
  "author": {
    "name": "Satiro Marra"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/satiromarra/vscode-coffee-autocompile"
  },
  "bugs": {
    "url": "https://github.com/satiromarra/vscode-coffee-autocompile/issues"
  },
  "readmeFilename": "README.md"
}
